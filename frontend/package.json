    "test:features:integrations": "vitest run src/features/alarmSettings src/features/mqtt src/features/homeAssistant src/features/zwavejs src/features/zigbee2mqtt src/features/frigate src/features/settings",
    "test:features:domain": "vitest run src/features/events src/features/codes src/features/doorCodes src/features/sensors",
